<Window x:Class="ContainerWpfApp.DockPanelWindow3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainerWpfApp"
        mc:Ignorable="d"
        Title="DockPanel" Height="300" Width="300">
    <DockPanel LastChildFill="False">
        <Button Content="Нажми меня" DockPanel.Dock="Top" Height="50"
                Background="Aquamarine" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="Buttom" DockPanel.Dock="Bottom" Height="50"/>
        <Button Content="Left" DockPanel.Dock="Left" Width="50"/>
        <Button Content="Left" DockPanel.Dock="Left" Width="50"/>
        <Button Content="Right" DockPanel.Dock="Right" Width="50"/>
        <Button Content="Right" DockPanel.Dock="Right" Width="50"/>
        
    </DockPanel>
</Window>
