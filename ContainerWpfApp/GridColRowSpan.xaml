<Window x:Class="ContainerWpfApp.GridColRowSpan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainerWpfApp"
        mc:Ignorable="d"
        Title="GridColRowSpan" Height="200" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content=" Нажми меня " Grid.Row="0" Grid.Column="0" Click="Button_Click"
                FontWeight="Bold" Background="Aquamarine"/>
        <Button Content=" Button 2 " Grid.Row="0" Grid.Column="1"/>
        <Button Content=" Button 3 " Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
